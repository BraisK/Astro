---
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";

const title = Astro.props.title;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <Menu />
        <slot />
        <Footer />
    </body>
</html>